{% extends "base.html.twig" %}

{% block content %}
    <h1 property="title">{{ content.title }}</h1>

    <div property="article">
        {{ content.article|raw }}
    </div>

    <ul>
        {% for item in courses %}
            <li><a href="{{ sulu_content_path(item.route) }}">{{ item.course.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}
