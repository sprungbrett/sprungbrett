{
    "name": "sprungbrett/translation",
    "type": "library",
    "description": "Translation handling.",
    "keywords": [
        "translation",
        "translatable",
        "model",
        "localization",
        "locale"
    ],
    "homepage": "http://sprungbrett.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Wachter",
            "homepage": "http://asapo.at"
        },
        {
            "name": "Sprungbrett project",
            "homepage": "http://sprungbrett.io"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/sprungbrett/sprungbrett/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",

        "doctrine/common": "^2.8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "jangregor/phpstan-prophecy": "^0.1.1",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.2"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Sprungbrett\\Component\\Translation\\": ""
        }
    },
    "scripts": {
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -c ./phpstan.neon src tests -l max",
        "php-cs": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
