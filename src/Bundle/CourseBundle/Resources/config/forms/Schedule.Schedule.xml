<?xml version="1.0" ?>
<form xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/form-1.0.xsd">
    <properties>
        <property name="name" type="text_line" colspan="9">
            <meta>
                <title>app.name</title>
            </meta>
        </property>

        <property name="course" type="single_course_selection" colspan="3">
            <meta>
                <title>app.course</title>
            </meta>
        </property>

        <property name="description" type="text_editor">
            <meta>
                <title>app.description</title>
            </meta>
        </property>

        <property name="maximumParticipants" type="number" colspan="4">
            <meta>
                <title>app.maximum-participants</title>
            </meta>
        </property>

        <property name="minimumParticipants" type="number" colspan="4">
            <meta>
                <title>app.minimum-participants</title>
            </meta>
        </property>

        <property name="price" type="number" colspan="4">
            <meta>
                <title>app.price</title>
            </meta>
        </property>
    </properties>
</form>
