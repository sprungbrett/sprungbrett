<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <!-- FIXME should be mapped-super-class but sulu cannot handle embedded-class -->
    <entity name="Sprungbrett\Bundle\CourseBundle\Model\Course\Course" table="sp_courses">
        <indexes>
            <index columns="id"/>
        </indexes>

        <id name="id" type="guid">
            <generator strategy="NONE"/>
        </id>

        <one-to-many
                field="translations"
                target-entity="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseTranslation"
                mapped-by="course"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>

        <one-to-one field="route" target-entity="Sulu\Bundle\RouteBundle\Model\RouteInterface" orphan-removal="true">
            <cascade>
                <cascade-all/>
            </cascade>

            <join-column on-delete="SET NULL"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
