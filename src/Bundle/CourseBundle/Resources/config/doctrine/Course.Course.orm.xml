<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <!-- FIXME should be mapped-super-class but sulu cannot handle embedded-class -->
    <entity name="Sprungbrett\Bundle\CourseBundle\Model\Course\Course" table="sp_courses">
        <id name="id" type="guid">
            <generator strategy="NONE"/>
        </id>

        <field name="workflowStage"/>

        <field name="trainerId" type="integer" nullable="true">
            <options>
                <option name="references">
                    <option name="entity">Sprungbrett\Bundle\CourseBundle\Model\Trainer\Trainer</option>
                    <option name="field">contact_id</option>
                    <option name="onDelete">SET NULL</option>
                </option>
            </options>
        </field>

        <one-to-many
                field="translations"
                target-entity="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseTranslation"
                mapped-by="course"
        >
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
