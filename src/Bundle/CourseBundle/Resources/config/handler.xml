<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"
                 alias="sulu.repository.course"
                 class="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\TrainerRepositoryInterface"
                 alias="sulu.repository.trainer"
                 class="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Attendee\AttendeeRepositoryInterface"
                 alias="sulu.repository.attendee"
                 class="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\CreateCourseHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\TrainerRepositoryInterface"/>
            <argument type="service" id="workflow.course"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>
            <argument type="string">%sprungbrett_course.default_type%</argument>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\ModifyCourseHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\TrainerRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\PublishCourseHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>
            <argument type="service" id="workflow.course"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\UnpublishCourseHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>
            <argument type="service" id="workflow.course"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\RemoveCourseHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\FindCourseQueryHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Course\CourseRepositoryInterface"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Course\Handler\ListCourseQueryHandler">
            <argument type="service" id="sulu_core.doctrine_list_builder_factory"/>
            <argument type="service" id="sulu_core.doctrine_rest_helper"/>
            <argument type="service" id="sulu_core.list_builder.field_descriptor_factory"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\Handler\ModifyTrainerHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\TrainerRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\Handler\FindTrainerQueryHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Trainer\TrainerRepositoryInterface"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Attendee\Handler\ModifyAttendeeHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Attendee\AttendeeRepositoryInterface"/>
            <argument type="service" id="Sprungbrett\Component\EventCollector\EventCollector"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Attendee\Handler\FindAttendeeQueryHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\Attendee\AttendeeRepositoryInterface"/>

            <tag name="tactician.handler" typehints="true"/>
        </service>
    </services>
</container>
