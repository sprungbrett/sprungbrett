<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sprungbrett\Bundle\CourseBundle\Admin\SprungbrettCourseAdmin">
            <argument type="service" id="sulu_security.security_checker"/>
            <argument>%sulu_admin.name%</argument>

            <tag name="sulu.admin"/>
            <tag name="sulu.context" context="admin"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Controller\CourseController">
            <argument type="string">%sulu.model.course.class%</argument>
            <argument type="service" id="tactician.commandbus.default"/>
            <argument type="service" id="fos_rest.view_handler.default"/>
        </service>
    </services>
</container>
