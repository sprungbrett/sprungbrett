<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\ListCoursesQueryHandler">
            <argument type="service" id="sulu_core.doctrine_list_builder_factory"/>
            <argument type="service" id="sulu_core.doctrine_rest_helper"/>
            <argument type="service" id="sulu_core.list_builder.field_descriptor_factory"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\FindCourseQueryHandler">
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\CourseRepositoryInterface"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\CreateCourseMessageHandler">
            <argument type="service" id="message_bus"/>
            <argument type="service" id="Sprungbrett\Component\MessageCollector\MessageCollector"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\CourseRepositoryInterface"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\ModifyCourseMessageHandler">
            <argument type="service" id="Sprungbrett\Component\MessageCollector\MessageCollector"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\CourseRepositoryInterface"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\RemoveCourseMessageHandler">
            <argument type="service" id="message_bus"/>
            <argument type="service" id="Sprungbrett\Component\MessageCollector\MessageCollector"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\CourseRepositoryInterface"/>

            <tag name="messenger.message_handler"/>
        </service>

        <service id="Sprungbrett\Bundle\CourseBundle\Model\Handler\PublishCourseMessageHandler">
            <argument type="service" id="message_bus"/>
            <argument type="service" id="Sprungbrett\Component\MessageCollector\MessageCollector"/>
            <argument type="service" id="Sprungbrett\Bundle\CourseBundle\Model\CourseRepositoryInterface"/>

            <tag name="messenger.message_handler"/>
        </service>
    </services>
</container>
