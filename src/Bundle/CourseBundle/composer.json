{
    "name": "sprungbrett/course-bundle",
    "type": "symfony-bundle",
    "description": "Course catalog for your Symfony applications.",
    "keywords": [
        "course"
    ],
    "homepage": "http://sprungbrett.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Johannes Wachter",
            "homepage": "http://asapo.at"
        },
        {
            "name": "Sprungbrett project",
            "homepage": "http://sprungbrett.io"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/sprungbrett/sprungbrett/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",

        "doctrine/common": "^2.6",
        "doctrine/orm": "^2.6",
        "friendsofsymfony/rest-bundle": "^2.3",
        "jackalope/jackalope-doctrine-dbal": "^1.2.5",
        "jms/serializer-bundle": "^2.4",
        "league/tactician-bundle": "^1.1",
        "sprungbrett/content": "^1.0@dev",
        "sprungbrett/event-collector": "^1.0@dev",
        "sprungbrett/infrastructure-bundle": "^1.0@dev",
        "sprungbrett/payload": "^1.0@dev",
        "sprungbrett/translation": "^1.0@dev",
        "sulu/sulu": "^2.0@dev",
        "symfony/config": "^3.4",
        "symfony/dependency-injection": "^3.4",
        "symfony/event-dispatcher": "^3.4",
        "symfony/framework-bundle": "^3.4",
        "symfony/http-foundation": "^3.4",
        "symfony/http-kernel": "^3.4",
        "symfony/workflow": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "jangregor/phpstan-prophecy": "^0.1.1",
        "matthiasnoback/symfony-dependency-injection-test": "^3.0",
        "phpstan/phpstan": "^0.9.2",
        "phpunit/phpunit": "^7.2",
        "symfony/browser-kit": "^3.4",
        "symfony/monolog-bundle": "^3.3",
        "zendframework/zend-stdlib": "~2.3",
        "zendframework/zendsearch": "@dev"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Sprungbrett\\Bundle\\CourseBundle\\": ""
        }
    },
    "scripts": {
        "initialize" : [
            "tests/app/console doctrine:schema:update --force",
            "tests/app/console sulu:document:initialize"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -c ./phpstan.neon . -l max",
        "php-cs": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "path",
            "url": "../../*/*"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
