<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Sprungbrett\Bundle\ContentBundle\Model\Content\Content"
            table="sp_contents">
        <unique-constraints>
            <unique-constraint columns="resource_key,resource_id,locale,stage"/>
        </unique-constraints>
        
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="resourceKey" type="string" nullable="false" length="20"/>
        <field name="resourceId" type="string" nullable="false"/>
        <field name="locale" type="string" nullable="false" length="5"/>
        <field name="stage" type="string" nullable="false" length="10"/>

        <field name="type" type="string" nullable="false"/>
        <field name="data" type="json" nullable="false"/>
    </entity>
</doctrine-mapping>
