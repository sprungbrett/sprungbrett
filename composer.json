{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "jackalope/jackalope-doctrine-dbal": "^1.2.5",
        "massive/build-bundle": "^0.3.0",
        "sulu/sulu": "dev-develop",
        "symfony/console": "^3.4",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^3.4",
        "symfony/lts": "^3",
        "symfony/yaml": "^3.4",
        "zendframework/zend-stdlib": "^2.3",
        "zendframework/zendsearch": "@dev"
    },
    "require-dev": {
        "phpcr/phpcr-shell": "^1.0",
        "phpunit/phpunit": "^6.5",
        "symfony/dotenv": "^3.4",
        "symfony/phpunit-bridge": "^3.4",
        "symfony/stopwatch": "^3.4",
        "symfony/web-profiler-bundle": "^3.4",
        "symfony/web-server-bundle": "^3.4"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/WebsiteKernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "security-checker security:check": "script"
        },
        "post-install-cmd": [
            "@auto-scripts",
            "Sulu\\Bundle\\TranslateBundle\\Composer\\TranslateScriptHandler::installTranslations",
            "Sulu\\Bundle\\MediaBundle\\Composer\\MediaScriptHandler::initBundle",
            "Massive\\Bundle\\SearchBundle\\Composer\\SearchScriptHandler::initBundle"
        ],
        "post-update-cmd": [
            "@auto-scripts",
            "Sulu\\Bundle\\TranslateBundle\\Composer\\TranslateScriptHandler::installTranslations",
            "Sulu\\Bundle\\MediaBundle\\Composer\\MediaScriptHandler::initBundle",
            "Massive\\Bundle\\SearchBundle\\Composer\\SearchScriptHandler::initBundle"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony-bin-dir": "bin",
        "symfony": {
            "allow-contrib": true
        }
    }
}
