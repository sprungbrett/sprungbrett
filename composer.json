{
    "name": "sprungbrett/sprungbrett",
    "type": "project",
    "license": "proprietary",
    "description": "Course platform for PHP, based on Sulu CMF.",
    "authors": [
        {
            "name": "Johannes Wachter",
            "homepage": "http://asapo.at"
        },
        {
            "name": "Sprungbrett project",
            "homepage": "http://sprungbrett.io"
        },
        {
            "name": "Community contributions",
            "homepage": "http://github.com/sprungbrett/sprungbrett/contributors"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "ext-iconv": "*",
        "jackalope/jackalope-doctrine-dbal": "^1.2.5",
        "league/tactician-bundle": "^1.1",
        "league/tactician-doctrine": "^1.1",
        "league/tactician-logger": "^0.10",
        "massive/build-bundle": "^0.4.0",
        "ramsey/uuid": "^3.7",
        "sulu/community-bundle": "dev-symfony-4-support",
        "sulu/sulu": "dev-develop",
        "symfony/console": "^4.1",
        "symfony/flex": "^1.0",
        "symfony/framework-bundle": "^4.1",
        "symfony/workflow": "^4.1",
        "symfony/yaml": "^4.1",
        "webmozart/assert": "^1.3",
        "zendframework/zend-stdlib": "^2.3",
        "zendframework/zendsearch": "@dev"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.12",
        "jangregor/phpstan-prophecy": "^0.1.1",
        "matthiasnoback/symfony-dependency-injection-test": "^3.0",
        "phpcr/phpcr-shell": "^1.1.1",
        "phpstan/phpstan": "^0.9.2", 
        "phpunit/phpunit": "^7.2",
        "symfony/browser-kit": "^3.4",
        "symfony/dotenv": "^4.1",
        "symfony/monolog-bundle": "^3.3",
        "symfony/phpunit-bridge": "^4.1",
        "symfony/stopwatch": "^4.1",
        "symfony/web-profiler-bundle": "^4.1",
        "symfony/web-server-bundle": "^4.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Sprungbrett\\": "src/"
        },
        "classmap": [
            "src/App/WebsiteKernel.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Sprungbrett\\Tests\\": "tests/"
        }
    },
    "replace": {
        "sprungbrett/app": "self.version",
        "sprungbrett/course": "self.version",
        "sprungbrett/uuid": "self.version"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install --symlink --relative %PUBLIC_DIR%": "symfony-cmd",
            "sulu:media:init": "symfony-cmd",
            "massive:search:init": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "initialize" : [
            "tests/app/console doctrine:schema:update --force",
            "tests/app/console sulu:document:initialize"
        ],
        "phpunit": "vendor/bin/phpunit",
        "phpstan": "vendor/bin/phpstan analyze -c ./phpstan.neon src tests -l max",
        "php-cs": "vendor/bin/php-cs-fixer fix --verbose --diff --dry-run",
        "php-cs-fix": "vendor/bin/php-cs-fixer fix"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony-bin-dir": "bin",
        "symfony": {
            "allow-contrib": true
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "repositories": [
        {
            "type": "git",
            "url": "git@github.com:wachterjohannes/SuluCommunityBundle.git"
        }
    ]
}
